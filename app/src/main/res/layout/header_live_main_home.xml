<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/header_bg_live"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginLeft="@dimen/margin_size_1_left_right"
        android:layout_marginRight="@dimen/margin_size_1_left_right"
        android:layout_marginTop="@dimen/margin_size_top_1"
        android:background="@drawable/shape_et_search_live_main_home"
        android:drawableLeft="@mipmap/ic_search_bar"
        android:editable="false"
        android:focusable="false"
        android:hint="搜索房间或主播"
        android:textColorHint="@color/et_search_hint_live"
        android:textSize="22px"/>

    <com.lqr.biliblili.mvp.ui.widget.AutoCardView
        android:layout_width="match_parent"
        android:layout_height="216px"
        android:layout_marginLeft="@dimen/margin_size_1_left_right"
        android:layout_marginRight="@dimen/margin_size_1_left_right"
        android:layout_marginTop="@dimen/margin_size_top_1"
        app:cardCornerRadius="@dimen/card_view_radius_live"
        app:cardElevation="0dp">

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:banner_indicatorGravity="right"
            app:banner_pageChangeDuration="1000"
            app:banner_pointAutoPlayAble="true"
            app:banner_pointAutoPlayInterval="3000"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointDrawable="@drawable/selector_live_header_banner_point_solid"
            app:banner_pointTopBottomMargin="2dp"
            app:banner_tipTextSize="0dp"
            app:banner_transitionEffect="alpha"/>
    </com.lqr.biliblili.mvp.ui.widget.AutoCardView>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_category"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginTop="10px"
        app:tl_iconHeight="40dp"
        app:tl_iconMargin="2dp"
        app:tl_iconWidth="40dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/header_category_text"
        app:tl_textUnselectColor="@color/header_category_text"
        app:tl_textsize="12sp"/>

</com.zhy.autolayout.AutoLinearLayout>