    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lqr.biliblili.mvp.ui.widget.LQRRefreshButton
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="65px"
        android:layout_gravity="center"
        android:layout_marginBottom="16px"
        android:layout_marginTop="16px"
        app:refresh_btn_borderRadius="50px"
        app:refresh_btn_borderWidth="0dp"
        app:refresh_btn_iconSize="28px"
        app:refresh_btn_text="刚刚看到这里，点击刷新"
        app:refresh_btn_textColor="@color/bottom_text_live"
