<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.lqr.biliblili.mvp.ui.widget.AutoCardView
        android:layout_width="match_parent"
        android:layout_height="275px"
        android:layout_marginBottom="12px"
        android:layout_marginLeft="@dimen/margin_size_2_left_right"
        android:layout_marginRight="@dimen/margin_size_2_left_right"
        android:layout_marginTop="12px"
        app:cardCornerRadius="@dimen/card_view_radius_live"
        app:cardElevation="@dimen/card_view_elevation_live">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_banner_cover_src"
                android:layout_width="match_parent"
                android:layout_height="206px"/>

            <TextView
                android:id="@+id/tv_banner_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/banner_text_margin_live"
                android:paddingRight="@dimen/banner_text_margin_live"
                android:textColor="@color/banner_title_text_live"
                android:textSize="25px"/>

        </LinearLayout>

    </com.lqr.biliblili.mvp.ui.widget.AutoCardView>

</com.zhy.autolayout.AutoFrameLayout>